<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<TextBlock HorizontalAlignment="Left" Margin="98,48,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top"/>
		<RadioButton x:Name="FirstProblem" Content="First problem (Problem 1)" HorizontalAlignment="Left" Margin="135,106,0,0" VerticalAlignment="Top" IsChecked="True"/>
		<RadioButton x:Name="SecondProblem" Content="Second problem (Problem 4)" HorizontalAlignment="Left" Margin="135,139,0,0" VerticalAlignment="Top"/>
		<Button Content="Display" HorizontalAlignment="Left" Margin="213,248,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
		<RadioButton x:Name="ThirdProblem" Content="Third problem (Problem 5)" HorizontalAlignment="Left" Margin="135,174,0,0" VerticalAlignment="Top"/>
	</Grid>
</Window>
